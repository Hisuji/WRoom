	<script>
	var jwtToken = sessionStorage.getItem('jwtToken');
	var ENV_URL = "localhost";

	// 환경변수 가져오기
	$.ajax({
		url: 'http://115.85.183.143:3000/main/env',
		type: 'GET',
		success: function(data) {
			ENV_URL = data;
			console.log(data);
			console.log("클라우드에서 접속");
		},
		error: function(request, status, error) {
			console.log("로컬에서 접속");
		}
    });

	$('#addBtn').click(function(){
		var category = $("#category option:selected").val(); //카테고리
		var tmpDate = $('#datepicker').val(); //마감 일자
		var dueDate = moment(tmpDate, 'MM/DD/YYYY').format("YYYY-MM-DD"); 
		var payAmount = $('#payAmount').val(); //총 납부 금액
		var memo = $('#memo').val();; //메모
		
		$.ajax({
			url:'http://' + ENV_URL + ':3000/payment',
			type : 'POST',
			headers: {
				'x-access-token': jwtToken
			},
			data : {
				payCategory : category,
				payAmount : payAmount,
				dueDate : dueDate,
				memo: memo
			},
			success:function(result){
				if(result == 1){
					alert("납부 내역 추가가 완료되었습니다.");
					window.location = '/main';
				} else{
					alert("[오류 발생] 다시 시도해주세요.");
				}
			}
		})
	})
