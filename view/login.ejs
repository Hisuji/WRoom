	<script src="//developers.kakao.com/sdk/js/kakao.min.js"></script>

	<style>
		#loginBtn {
			width: 300px;
			height: 49px;
			margin: 0 auto;
			font-size: 17px;
		}

		#kakaoBtn {
			margin-top: 15px;
			display: block;
