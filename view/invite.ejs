	<script src="js/global.script.js"></script>
	
</body>
<script>
	var jwtToken = sessionStorage.getItem('jwtToken');
	var email='';
	$('#searchBtn').click(function(){
        email = $('#searchEmail').val();

        $.ajax({
          url:'http://localhost:3000/invite',
          type : 'POST',
          data : {
				findEmail : email
   		       },
          success:function(data){
			  if(data){
				  if(!data[0].image) data[0].image="/img/content/profile.png";
				  $("#nameCard").append(
								'<div class="add-member">'+
									'<img src="'+data[0].image+'" alt="">'+
									'<h4>'+data[0].name+'</h4>'+
								'</div>'
				  )
				}else{
				 alert("해당 사용자가 없습니다.");
			}}
			});
		});
		
	$('#addSearch').click(function(){
		if(email==''){
			alert("친구를 먼저 검색해주세요");
		}
		else{
		$.ajax({
			url:'http://localhost:3000/invite/add',
			type : 'POST',
			headers : {
					'x-access-token' : jwtToken
						},
			data : {
				addEmail : email
					},
			success:function(data){
				if(data){
					if(confirm("계속해서 추가하시겠습니까?")){
						window.location = '/invite';
					}else{
						window.location = '/main';
					}
				}else{
					confirm("이미 다른 룸쉐어 중..");
				}
			}
		});}
});
</script>

</html>